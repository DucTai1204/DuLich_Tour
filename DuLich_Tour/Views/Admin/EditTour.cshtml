@model DuLich_Tour.Models.TourDuLich

@{
    ViewBag.Title = "Sửa tour";
}

<h2 class="mb-3">Sửa tour</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.IdTour)
    @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })

    <div class="row">
        <div class="col-md-8">
            <div class="mb-3">
                @Html.LabelFor(m => m.TenTour, "Tên tour", new { @class = "form-label" })
                @Html.TextBoxFor(m => m.TenTour, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.TenTour, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.Label("Địa điểm", new { @class = "form-label" })
                @Html.DropDownList("IdDiaDiem", (SelectList)ViewBag.IdDiaDiem, "-- Chọn địa điểm --", new { @class = "form-select" })
            </div>

            <div class="mb-3">
                @Html.Label("Khuyến mãi", new { @class = "form-label" })
                @Html.DropDownList("IdKhuyenMai", (SelectList)ViewBag.IdKhuyenMai, "-- Không áp dụng --", new { @class = "form-select" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.MoTaNgan, "Mô tả ngắn", new { @class = "form-label" })
                @Html.TextAreaFor(m => m.MoTaNgan, 3, 50, new { @class = "form-control" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.LichTrinh, "Lịch trình", new { @class = "form-label" })
                @Html.TextAreaFor(m => m.LichTrinh, 5, 50, new { @class = "form-control" })
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    @Html.LabelFor(m => m.NgayBatDau, "Ngày bắt đầu", new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.NgayBatDau, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                </div>
                <div class="col-md-6 mb-3">
                    @Html.LabelFor(m => m.NgayKetThuc, "Ngày kết thúc", new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.NgayKetThuc, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    @Html.LabelFor(m => m.GiaNguoiLon, "Giá người lớn", new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.GiaNguoiLon, new { @class = "form-control", type = "number", step = "1000" })
                </div>
                <div class="col-md-6 mb-3">
                    @Html.LabelFor(m => m.GiaTreEm, "Giá trẻ em", new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.GiaTreEm, new { @class = "form-control", type = "number", step = "1000" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    @Html.LabelFor(m => m.SoCho, "Tổng số chỗ", new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.SoCho, new { @class = "form-control", type = "number" })
                </div>
                <div class="col-md-6 mb-3">
                    @Html.LabelFor(m => m.SoChoConLai, "Số chỗ còn lại", new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.SoChoConLai, new { @class = "form-control", type = "number" })
                </div>
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.HinhAnh, "Ảnh đại diện", new { @class = "form-label" })
                @Html.TextBoxFor(m => m.HinhAnh, new { @class = "form-control" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.TrangThai, "Trạng thái", new { @class = "form-label" })
                @Html.TextBoxFor(m => m.TrangThai, new { @class = "form-control" })
            </div>

            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            @Html.ActionLink("Quay lại", "Tours", null, new { @class = "btn btn-secondary ms-2" })
        </div>
    </div>
}


