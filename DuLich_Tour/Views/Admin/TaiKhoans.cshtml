@model IEnumerable<DuLich_Tour.Models.TaiKhoan>

@{
    ViewBag.Title = "Tài khoản";
}

@section PageActions{
    @Html.ActionLink("Thêm tài khoản", "CreateTaiKhoan", null, new { @class = "btn btn-primary rounded-pill" })
}

<div class="card border-0 shadow-sm form-card mb-4">
    <div class="card-body d-flex flex-column flex-lg-row justify-content-between align-items-lg-center gap-3">
        <div>
            <p class="text-uppercase text-muted small mb-1">Bảo mật & truy cập</p>
            <h2 class="h4 fw-bold mb-0">Quản lý tài khoản</h2>
            <p class="text-muted mb-0">Phân quyền truy cập hệ thống cho admin, nhân viên và khách.</p>
        </div>
        <div class="input-group input-group-sm w-100 w-lg-50 shadow-sm">
            <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-magnifying-glass"></i></span>
            <input type="search" class="form-control border-start-0" placeholder="Tìm theo tên đăng nhập" onkeyup="filterTaiKhoan(this.value)" />
        </div>
    </div>
</div>

<div class="table-responsive shadow-sm rounded-4 border">
    <table class="table align-middle mb-0" id="taikhoanTable">
        <thead class="table-light text-uppercase small text-muted">
            <tr>
                <th>Mã</th>
                <th>Tên đăng nhập</th>
                <th>Vai trò</th>
                <th>Trạng thái</th>
                <th>Ngày tạo</th>
                <th class="text-end">Thao tác</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="fw-semibold">#@item.IdTaiKhoan</td>
                <td>@item.TenDangNhap</td>
                <td class="text-uppercase">@item.VaiTro</td>
                <td>
                    <span class="badge @(item.TrangThai ? "bg-success" : "bg-secondary")">
                        @(item.TrangThai ? "Hoạt động" : "Khóa")
                    </span>
                </td>
                <td>@item.NgayTao.ToString("dd/MM/yyyy")</td>
                <td class="text-end">
                    <a href="@Url.Action("EditTaiKhoan", new { id = item.IdTaiKhoan })" class="btn btn-outline-secondary btn-sm rounded-pill me-2">
                        <i class="fa-solid fa-pen-to-square me-1"></i>Sửa
                    </a>
                    <a href="@Url.Action("DeleteTaiKhoan", new { id = item.IdTaiKhoan })" class="btn btn-outline-danger btn-sm rounded-pill">
                        <i class="fa-solid fa-trash me-1"></i>Xóa
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

@section scripts{
    <script>
        function filterTaiKhoan(keyword) {
            const filter = keyword.toLowerCase();
            document.querySelectorAll('#taikhoanTable tbody tr').forEach(row => {
                row.style.display = row.innerText.toLowerCase().includes(filter) ? '' : 'none';
            });
        }
    </script>
}


