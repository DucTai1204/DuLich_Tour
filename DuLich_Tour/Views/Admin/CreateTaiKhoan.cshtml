@model DuLich_Tour.Models.TaiKhoan

@{
    ViewBag.Title = "Thêm tài khoản";
}

@section PageActions{
    <a href="@Url.Action("TaiKhoans", "Admin")" class="btn btn-light text-secondary rounded-pill fw-semibold">
        <i class="fa-solid fa-arrow-left me-2"></i>Quay lại danh sách
    </a>
}

<div class="row justify-content-center">
    <div class="col-xl-9 col-lg-10">
        <div class="card border-0 shadow-sm overflow-hidden">
            <div class="card-header">
                <h4 class="mb-0 fw-bold text-dark" style="font-size: 1.5rem;">Tạo tài khoản mới</h4>
                <p class="text-muted mb-0 mt-2" style="font-size: 1rem;">Cấp quyền truy cập hệ thống cho nhân viên hoặc khách hàng.</p>
            </div>
            <div class="card-body" style="padding: 2.5rem 3rem;">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "alert alert-danger rounded-3 mb-4" })

                    <div class="row g-4">
                        <div class="col-md-12">
                            <div class="mb-5">
                                @Html.LabelFor(m => m.TenDangNhap, "Tên đăng nhập", new { @class = "form-label fw-semibold" })
                                <div class="input-group input-group-lg shadow-sm">
                                    <span class="input-group-text bg-white border-0"><i class="fa-solid fa-user text-dark"></i></span>
                                    @Html.TextBoxFor(m => m.TenDangNhap, new { @class = "form-control border-0", placeholder = "username" })
                                </div>
                                @Html.ValidationMessageFor(m => m.TenDangNhap, "", new { @class = "text-danger small mt-1" })
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="mb-5">
                                <label class="form-label fw-semibold"><i class="fa-solid fa-key text-warning me-2"></i>Mật khẩu</label>
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-white border-0"><i class="fa-solid fa-lock"></i></span>
                                    <input type="password" name="matKhauPlain" class="form-control border-0" placeholder="Nhập mật khẩu an toàn" />
                                </div>
                                <div class="form-text mt-2"><i class="fa-solid fa-info-circle me-1"></i>Mật khẩu sẽ được mã hóa an toàn</div>
                                @Html.ValidationMessage("matKhauPlain", "", new { @class = "text-danger small mt-1" })
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="mb-5">
                                @Html.LabelFor(m => m.VaiTro, "Vai trò hệ thống", new { @class = "form-label fw-semibold" })
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-white border-0"><i class="fa-solid fa-user-tag text-primary"></i></span>
                                    @Html.DropDownListFor(m => m.VaiTro, new SelectList(new[] {
                                        new { Value = "admin", Text = "Quản trị viên (Admin)" },
                                        new { Value = "nhan_vien", Text = "Nhân viên (Staff)" },
                                        new { Value = "khach_hang", Text = "Khách hàng (Customer)" }
                                    }, "Value", "Text", Model != null ? Model.VaiTro : null), "-- Chọn vai trò --", new { @class = "form-select border-0" })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-check form-switch p-4 bg-light rounded-3 shadow-sm">
                                @Html.CheckBoxFor(m => m.TrangThai, new { @class = "form-check-input", id = "TrangThai", @checked = "checked" })
                                <label class="form-check-label fw-semibold ms-3" for="TrangThai" style="font-size: 1rem;">
                                    <i class="fa-solid fa-toggle-on text-success me-2"></i>Kích hoạt tài khoản ngay
                                </label>
                            </div>
                        </div>

                        <div class="col-md-12 mt-5">
                            <div class="d-grid gap-3">
                                <button type="submit" class="btn btn-dark btn-lg fw-bold shadow-sm" style="padding: 1rem 2rem; font-size: 1.1rem;">
                                    <i class="fa-solid fa-user-plus me-2"></i>Tạo tài khoản
                                </button>
                                <a href="@Url.Action("TaiKhoans", "Admin")" class="btn btn-outline-secondary" style="padding: 0.75rem 1.5rem;">
                                    <i class="fa-solid fa-times me-2"></i>Hủy
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
