@{
    ViewBag.Title = "Thêm tài khoản";
}

@section PageActions{
    @Html.ActionLink("Danh sách tài khoản", "TaiKhoans", null, new { @class = "btn btn-outline-secondary rounded-pill" })
}

<div class="card shadow-sm border-0 form-card">
    <div class="card-body p-4 p-lg-5">
        <h2 class="fw-bold mb-4">Tài khoản quản trị / khách</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false, "", new { @class = "alert alert-danger rounded-3" })

            <div class="row g-4">
                <div class="col-lg-7">
                    <div class="card border-0 shadow-sm p-4">
                        <div class="mb-3">
                            @Html.LabelFor(m => m.TenDangNhap, "Tên đăng nhập", new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.TenDangNhap, new { @class = "form-control form-control-lg", placeholder = "Tên đăng nhập" })
                            @Html.ValidationMessageFor(m => m.TenDangNhap, "", new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Mật khẩu</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
                                <input type="password" name="matKhauPlain" class="form-control" placeholder="Nhập mật khẩu" />
                            </div>
                            <small class="text-muted">Mật khẩu sẽ được hash trước khi lưu.</small>
                            @Html.ValidationMessage("matKhauPlain", "", new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(m => m.VaiTro, "Vai trò", new { @class = "form-label" })
                            @Html.DropDownListFor(m => m.VaiTro, new SelectList(new[] {
                                new { Value = "admin", Text = "Quản trị viên" },
                                new { Value = "nhan_vien", Text = "Nhân viên" },
                                new { Value = "khach_hang", Text = "Khách hàng" }
                            }, "Value", "Text", Model?.VaiTro), "-- Chọn vai trò --", new { @class = "form-select" })
                        </div>
                        <div class="form-check form-switch">
                            @Html.CheckBoxFor(m => m.TrangThai, new { @class = "form-check-input", role = "switch", id = "TrangThai" })
                            <label class="form-check-label" for="TrangThai">Hoạt động</label>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="card border-0 shadow-sm p-4 h-100">
                        <p class="text-muted small mb-4">Bạn có thể gán tài khoản này cho khách hàng trong mục khách hàng.</p>
                        <button type="submit" class="btn btn-primary w-100 mb-2">
                            <i class="fa-solid fa-user-shield me-2"></i>Tạo tài khoản
                        </button>
                        @Html.ActionLink("Hủy bỏ", "TaiKhoans", null, new { @class = "btn btn-outline-secondary w-100" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@model DuLich_Tour.Models.TaiKhoan



