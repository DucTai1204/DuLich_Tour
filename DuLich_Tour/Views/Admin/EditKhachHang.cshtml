@model DuLich_Tour.Models.KhachHang

@{
    ViewBag.Title = "Sửa khách hàng";
}

@section PageActions{
    <a href="@Url.Action("KhachHangs", "Admin")" class="btn btn-light text-secondary rounded-pill fw-semibold">
        <i class="fa-solid fa-arrow-left me-2"></i>Quay lại danh sách
    </a>
}

<div class="row justify-content-center">
    <div class="col-xl-9 col-lg-10">
        <div class="card border-0 shadow-sm overflow-hidden">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0 fw-bold text-info" style="font-size: 1.5rem;">Cập nhật hồ sơ khách hàng</h4>
                        <p class="text-muted mb-0 mt-2" style="font-size: 1rem;">Chỉnh sửa thông tin khách hàng #@Model.IdKhachHang</p>
                    </div>
                    <span class="badge bg-light text-dark border px-4 py-2" style="font-size: 1rem;">Mã: @Model.IdKhachHang</span>
                </div>
            </div>
            <div class="card-body" style="padding: 2.5rem 3rem;">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.IdKhachHang)
                    @Html.ValidationSummary(false, "", new { @class = "alert alert-danger rounded-3 mb-4" })

                    <div class="row g-4">
                        <div class="col-md-12">
                            <div class="mb-5">
                                @Html.Label("Tài khoản liên kết", new { @class = "form-label fw-semibold" })
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-white border-0"><i class="fa-solid fa-user-shield text-secondary"></i></span>
                                    @Html.DropDownListFor(m => m.IdTaiKhoan, (SelectList)ViewBag.IdTaiKhoan, "-- Chọn tài khoản (nếu có) --", new { @class = "form-select border-0" })
                                </div>
                                @Html.ValidationMessageFor(m => m.IdTaiKhoan, "", new { @class = "text-danger small mt-1" })
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="mb-4">
                                @Html.LabelFor(m => m.HoTen, "Họ tên", new { @class = "form-label fw-semibold" })
                                <div class="input-group input-group-lg shadow-sm">
                                    <span class="input-group-text bg-white border-0"><i class="fa-solid fa-user text-info"></i></span>
                                    @Html.TextBoxFor(m => m.HoTen, new { @class = "form-control border-0", placeholder = "Nhập họ tên đầy đủ..." })
                                </div>
                                @Html.ValidationMessageFor(m => m.HoTen, "", new { @class = "text-danger small mt-1" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-4">
                                @Html.LabelFor(m => m.Email, "Email", new { @class = "form-label fw-semibold" })
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-white border-0"><i class="fa-solid fa-envelope text-primary"></i></span>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control border-0", type = "email", placeholder = "email@example.com" })
                                </div>
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small mt-1" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-4">
                                @Html.LabelFor(m => m.SoDienThoai, "Số điện thoại", new { @class = "form-label fw-semibold" })
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-white border-0"><i class="fa-solid fa-phone text-success"></i></span>
                                    @Html.TextBoxFor(m => m.SoDienThoai, new { @class = "form-control border-0", placeholder = "0123456789" })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="mb-4">
                                @Html.LabelFor(m => m.DiaChi, "Địa chỉ", new { @class = "form-label fw-semibold" })
                                @Html.TextAreaFor(m => m.DiaChi, 3, 50, new { @class = "form-control border-0 shadow-sm", placeholder = "Nhập địa chỉ đầy đủ..." })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-4">
                                @Html.LabelFor(m => m.NgaySinh, "Ngày sinh", new { @class = "form-label fw-semibold" })
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-white border-0"><i class="fa-solid fa-calendar text-warning"></i></span>
                                    @Html.TextBoxFor(m => m.NgaySinh, "{0:yyyy-MM-dd}", new { @class = "form-control border-0", type = "date" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-4">
                                @Html.LabelFor(m => m.GioiTinh, "Giới tính", new { @class = "form-label fw-semibold" })
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-white border-0"><i class="fa-solid fa-venus-mars text-info"></i></span>
                                    @Html.DropDownListFor(m => m.GioiTinh, new SelectList(new[] {
                                        new { Value = "nam", Text = "Nam" },
                                        new { Value = "nu", Text = "Nữ" },
                                        new { Value = "khac", Text = "Khác" }
                                    }, "Value", "Text", Model != null ? Model.GioiTinh : null), "-- Chọn giới tính --", new { @class = "form-select border-0" })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12 mt-5">
                            <div class="d-grid gap-3">
                                <button type="submit" class="btn btn-info text-white btn-lg fw-bold shadow-sm" style="padding: 1rem 2rem; font-size: 1.1rem;">
                                    <i class="fa-solid fa-floppy-disk me-2"></i>Lưu thay đổi
                                </button>
                                <a href="@Url.Action("KhachHangs", "Admin")" class="btn btn-outline-secondary" style="padding: 0.75rem 1.5rem;">
                                    <i class="fa-solid fa-times me-2"></i>Hủy
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
