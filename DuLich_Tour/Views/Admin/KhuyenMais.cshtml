@model IEnumerable<DuLich_Tour.Models.KhuyenMai>

@{
    ViewBag.Title = "Khuyến mãi";
}

@section PageActions{
    @Html.ActionLink("Thêm khuyến mãi", "CreateKhuyenMai", null, new { @class = "btn btn-primary rounded-pill" })
}

<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center gap-4">
            <div>
                <p class="text-uppercase text-muted small mb-2" style="font-size: 0.75rem; letter-spacing: 0.1em; font-weight: 600;">Truyền thông & ưu đãi</p>
                <h2 class="fw-bold mb-2" style="font-size: 1.75rem; color: #1f2937;">Quản lý khuyến mãi</h2>
                <p class="text-muted mb-0" style="font-size: 1rem;">Theo dõi các chương trình giảm giá đang áp dụng cho tour.</p>
            </div>
            <div class="input-group w-100 w-lg-50 shadow-sm" style="max-width: 400px;">
                <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-magnifying-glass"></i></span>
                <input type="search" class="form-control border-start-0" placeholder="Tìm theo tên chương trình..." onkeyup="filterKhuyenMai(this.value)" style="padding: 0.75rem 1rem;" />
            </div>
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body" style="padding: 0;">
        <div class="table-responsive">
            <table class="table align-middle mb-0" id="khuyenmaiTable">
        <thead class="table-light text-uppercase small text-muted">
            <tr>
                <th>Mã</th>
                <th>Tên chương trình</th>
                <th>Giá trị</th>
                <th>Kiểu giảm</th>
                <th>Trạng thái</th>
                <th class="text-end">Thao tác</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="fw-semibold">#@item.IdKhuyenMai</td>
                <td>@item.TenChuongTrinh</td>
                <td>@(item.GiaTri.HasValue ? item.GiaTri.Value.ToString("0.##") : "-")</td>
                <td class="text-uppercase">@item.KieuGiam</td>
                <td>
                    <span class="badge @(item.TrangThai ? "bg-success" : "bg-secondary")">
                        @(item.TrangThai ? "Kích hoạt" : "Tắt")
                    </span>
                </td>
                <td class="text-end">
                    <div class="d-flex gap-2 justify-content-end">
                        <a href="@Url.Action("EditKhuyenMai", new { id = item.IdKhuyenMai })" class="btn btn-outline-secondary" style="padding: 0.5rem 1rem;">
                            <i class="fa-solid fa-pen-to-square me-1"></i>Sửa
                        </a>
                        <a href="@Url.Action("DeleteKhuyenMai", new { id = item.IdKhuyenMai })" class="btn btn-outline-danger" style="padding: 0.5rem 1rem;">
                            <i class="fa-solid fa-trash me-1"></i>Xóa
                        </a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
        </div>
    </div>
</div>

@section scripts{
    <script>
        function filterKhuyenMai(keyword) {
            const filter = keyword.toLowerCase();
            document.querySelectorAll('#khuyenmaiTable tbody tr').forEach(row => {
                row.style.display = row.innerText.toLowerCase().includes(filter) ? '' : 'none';
            });
        }
    </script>
}


