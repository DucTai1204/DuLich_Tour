@model DuLich_Tour.Models.TaiKhoan

@{
    ViewBag.Title = "Sửa tài khoản";
}

@section PageActions{
    <a href="@Url.Action("TaiKhoans", "Admin")" class="btn btn-light text-secondary rounded-pill fw-semibold">
        <i class="fa-solid fa-arrow-left me-2"></i>Quay lại danh sách
    </a>
}

<div class="row justify-content-center">
    <div class="col-xl-8 col-lg-10">
        <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
            <div class="card-header bg-white border-bottom py-4 px-5">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0 fw-bold text-dark">Cập nhật tài khoản</h4>
                        <p class="text-muted small mb-0 mt-1">Chỉnh sửa thông tin truy cập #@Model.IdTaiKhoan</p>
                    </div>
                    <span class="badge bg-light text-dark border px-3 py-2">ID: @Model.IdTaiKhoan</span>
                </div>
            </div>
            <div class="card-body p-5">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.IdTaiKhoan)
                    @Html.ValidationSummary(false, "", new { @class = "alert alert-danger rounded-3 mb-4" })

                    <div class="row g-4">
                        <div class="col-md-12">
                            <div class="mb-3">
                                @Html.LabelFor(m => m.TenDangNhap, "Tên đăng nhập", new { @class = "form-label fw-semibold" })
                                @Html.TextBoxFor(m => m.TenDangNhap, new { @class = "form-control form-control-lg bg-light border-0" })
                                @Html.ValidationMessageFor(m => m.TenDangNhap, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Mật khẩu mới</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0"><i class="fa-solid fa-lock"></i></span>
                                    <input type="password" name="matKhauPlain" class="form-control bg-light border-0" placeholder="Để trống nếu không đổi mật khẩu" />
                                </div>
                                <div class="form-text">Chỉ nhập nếu bạn muốn thay đổi mật khẩu hiện tại.</div>
                                @Html.ValidationMessage("matKhauPlain", "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="mb-3">
                                @Html.LabelFor(m => m.VaiTro, "Vai trò hệ thống", new { @class = "form-label fw-semibold" })
                                @Html.DropDownListFor(m => m.VaiTro, new SelectList(new[] {
                                    new { Value = "admin", Text = "Quản trị viên (Admin)" },
                                    new { Value = "nhan_vien", Text = "Nhân viên (Staff)" },
                                    new { Value = "khach_hang", Text = "Khách hàng (Customer)" }
                                }, "Value", "Text", Model?.VaiTro), new { @class = "form-select bg-light border-0" })
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-check form-switch mt-2">
                                @Html.CheckBoxFor(m => m.TrangThai, new { @class = "form-check-input", id = "TrangThai" })
                                <label class="form-check-label fw-semibold" for="TrangThai">Tài khoản đang hoạt động</label>
                            </div>
                        </div>

                        <div class="col-md-12 mt-4">
                            <div class="d-grid">
                                <button type="submit" class="btn btn-dark btn-lg rounded-pill fw-bold shadow-sm">
                                    <i class="fa-solid fa-floppy-disk me-2"></i>Lưu thay đổi
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
