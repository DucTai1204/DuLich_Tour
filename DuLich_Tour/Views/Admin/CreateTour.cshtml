@model DuLich_Tour.Models.TourDuLich
@using System.Web.Mvc

@{
    ViewBag.Title = "Tạo tour mới";
    var statusItems = new List<System.Web.Mvc.SelectListItem>
    {
        new System.Web.Mvc.SelectListItem { Value = "mo-ban", Text = "Mở bán" },
        new System.Web.Mvc.SelectListItem { Value = "tam-dung", Text = "Tạm dừng" },
        new System.Web.Mvc.SelectListItem { Value = "ngung-hoat-dong", Text = "Ngừng hoạt động" }
    };
}

@section PageActions{
    <a href="@Url.Action("Tours", "Admin")" class="btn btn-light text-secondary rounded-pill fw-semibold">
        <i class="fa-solid fa-arrow-left me-2"></i>Quay lại danh sách
    </a>
}

<div class="row justify-content-center">
    <div class="col-xl-11">
        <div class="card border-0 shadow-sm overflow-hidden">
            <div class="card-header">
                <h4 class="mb-0 fw-bold text-primary" style="font-size: 1.5rem;">Tạo tour du lịch mới</h4>
                <p class="text-muted mb-0 mt-2" style="font-size: 1rem;">Điền đầy đủ thông tin để mở bán tour mới.</p>
            </div>
            <div class="card-body" style="padding: 2.5rem 3rem;">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "alert alert-danger rounded-3 mb-4" })

                    <div class="row g-5">
                        <!-- Left Column: Main Info -->
                        <div class="col-lg-8">
                            <div class="d-flex align-items-center mb-5">
                                <div class="icon-box bg-primary bg-opacity-10 text-primary me-3">
                                    <i class="fa-solid fa-info-circle fa-lg"></i>
                                </div>
                                <h6 class="text-uppercase text-muted small fw-bold mb-0" style="font-size: 0.875rem; letter-spacing: 0.1em;">Thông tin chung</h6>
                            </div>
                            
                            <div class="mb-5">
                                @Html.LabelFor(m => m.TenTour, "Tên tour", new { @class = "form-label fw-semibold" })
                                <div class="input-group input-group-lg shadow-sm">
                                    <span class="input-group-text bg-white border-0"><i class="fa-solid fa-map-location-dot text-primary"></i></span>
                                    @Html.TextBoxFor(m => m.TenTour, new { @class = "form-control border-0", placeholder = "Nhập tên tour hấp dẫn..." })
                                </div>
                                @Html.ValidationMessageFor(m => m.TenTour, "", new { @class = "text-danger small mt-1" })
                            </div>

                            <div class="row g-4 mb-5">
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold"><i class="fa-solid fa-mountain-city text-success me-2"></i>Địa điểm</label>
                                    <div class="input-group shadow-sm">
                                        <span class="input-group-text bg-white border-0"><i class="fa-solid fa-location-dot"></i></span>
                                        @Html.DropDownList("IdDiaDiem", (SelectList)ViewBag.DiaDiemList, "-- Chọn địa điểm --", new { @class = "form-select border-0" })
                                    </div>
                                    @Html.ValidationMessage("IdDiaDiem", "", new { @class = "text-danger small mt-1" })
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold"><i class="fa-solid fa-tags text-danger me-2"></i>Khuyến mãi</label>
                                    <div class="input-group shadow-sm">
                                        <span class="input-group-text bg-white border-0"><i class="fa-solid fa-gift"></i></span>
                                        @Html.DropDownList("IdKhuyenMai", (SelectList)ViewBag.KhuyenMaiList, "-- Không áp dụng --", new { @class = "form-select border-0" })
                                    </div>
                                </div>
                            </div>

                            <div class="mb-5">
                                @Html.LabelFor(m => m.MoTaNgan, "Mô tả ngắn", new { @class = "form-label fw-semibold" })
                                @Html.TextAreaFor(m => m.MoTaNgan, 4, 50, new { @class = "form-control border-0 shadow-sm", placeholder = "Tóm tắt những điểm nổi bật nhất...", style = "min-height: 100px;" })
                                <div class="form-text mt-2"><i class="fa-solid fa-info-circle me-1"></i>Hiển thị trên trang danh sách tour</div>
                            </div>

                            <div class="mb-5">
                                @Html.LabelFor(m => m.LichTrinh, "Lịch trình chi tiết", new { @class = "form-label fw-semibold" })
                                @Html.TextAreaFor(m => m.LichTrinh, 7, 50, new { @class = "form-control border-0 shadow-sm", placeholder = "Mô tả chi tiết lịch trình từng ngày...", style = "min-height: 150px;" })
                                <div class="form-text mt-2"><i class="fa-solid fa-calendar-days me-1"></i>Mô tả chi tiết từng ngày của tour</div>
                            </div>
                            
                            <div class="d-flex align-items-center mb-5 mt-5">
                                <div class="icon-box bg-info bg-opacity-10 text-info me-3">
                                    <i class="fa-solid fa-image fa-lg"></i>
                                </div>
                                <h6 class="text-uppercase text-muted small fw-bold mb-0" style="font-size: 0.875rem; letter-spacing: 0.1em;">Hình ảnh</h6>
                            </div>
                            <div class="mb-5">
                                @Html.LabelFor(m => m.HinhAnh, "URL Hình ảnh", new { @class = "form-label fw-semibold" })
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-white border-0"><i class="fa-regular fa-image text-info"></i></span>
                                    @Html.TextBoxFor(m => m.HinhAnh, new { @class = "form-control border-0", placeholder = "https://example.com/image.jpg" })
                                </div>
                                <div class="form-text mt-2"><i class="fa-solid fa-link me-1"></i>Nên dùng ảnh chất lượng cao, tỉ lệ 16:9</div>
                            </div>
                        </div>

                        <!-- Right Column: Settings & Pricing -->
                        <div class="col-lg-4">
                            <div class="p-5 bg-light rounded-4 h-100 border shadow-sm">
                                <div class="d-flex align-items-center mb-5">
                                    <div class="icon-box bg-warning bg-opacity-10 text-warning me-3">
                                        <i class="fa-solid fa-cog fa-lg"></i>
                                    </div>
                                    <h6 class="text-uppercase text-muted small fw-bold mb-0" style="font-size: 0.875rem; letter-spacing: 0.1em;">Thiết lập & Giá</h6>
                                </div>

                                <div class="mb-4">
                                    @Html.LabelFor(m => m.TrangThai, "Trạng thái", new { @class = "form-label fw-semibold" })
                                    <div class="input-group shadow-sm">
                                        <span class="input-group-text bg-white border-0"><i class="fa-solid fa-toggle-on text-success"></i></span>
                                        @Html.DropDownListFor(m => m.TrangThai, statusItems, new { @class = "form-select border-0" })
                                    </div>
                                </div>

                                <div class="mb-4">
                                    @Html.LabelFor(m => m.NgayBatDau, "Ngày khởi hành", new { @class = "form-label fw-semibold" })
                                    <div class="input-group shadow-sm">
                                        <span class="input-group-text bg-white border-0"><i class="fa-solid fa-calendar-check text-primary"></i></span>
                                        @Html.TextBoxFor(m => m.NgayBatDau, "{0:yyyy-MM-dd}", new { @class = "form-control border-0", type = "date" })
                                    </div>
                                    @Html.ValidationMessageFor(m => m.NgayBatDau, "", new { @class = "text-danger small mt-1" })
                                </div>

                                <div class="mb-5">
                                    @Html.LabelFor(m => m.NgayKetThuc, "Ngày kết thúc", new { @class = "form-label fw-semibold" })
                                    <div class="input-group shadow-sm">
                                        <span class="input-group-text bg-white border-0"><i class="fa-solid fa-calendar-xmark text-danger"></i></span>
                                        @Html.TextBoxFor(m => m.NgayKetThuc, "{0:yyyy-MM-dd}", new { @class = "form-control border-0", type = "date" })
                                    </div>
                                    @Html.ValidationMessageFor(m => m.NgayKetThuc, "", new { @class = "text-danger small mt-1" })
                                </div>

                                <hr class="border-secondary opacity-25 my-5">

                                <div class="mb-4">
                                    @Html.LabelFor(m => m.GiaNguoiLon, "Giá người lớn", new { @class = "form-label fw-semibold" })
                                    <div class="input-group shadow-sm">
                                        <span class="input-group-text border-0 bg-white fw-bold text-primary"><i class="fa-solid fa-dollar-sign me-1"></i>₫</span>
                                        @Html.TextBoxFor(m => m.GiaNguoiLon, new { @class = "form-control border-0", type = "number", step = "1000", placeholder = "0" })
                                    </div>
                                    @Html.ValidationMessageFor(m => m.GiaNguoiLon, "", new { @class = "text-danger small mt-1" })
                                </div>

                                <div class="mb-5">
                                    @Html.LabelFor(m => m.GiaTreEm, "Giá trẻ em", new { @class = "form-label fw-semibold" })
                                    <div class="input-group shadow-sm">
                                        <span class="input-group-text border-0 bg-white fw-bold text-info"><i class="fa-solid fa-child me-1"></i>₫</span>
                                        @Html.TextBoxFor(m => m.GiaTreEm, new { @class = "form-control border-0", type = "number", step = "1000", placeholder = "0" })
                                    </div>
                                    @Html.ValidationMessageFor(m => m.GiaTreEm, "", new { @class = "text-danger small mt-1" })
                                </div>

                                <hr class="border-secondary opacity-25 my-5">

                                <div class="row g-3 mb-5">
                                    <div class="col-6">
                                        @Html.LabelFor(m => m.SoCho, "Tổng chỗ", new { @class = "form-label fw-semibold" })
                                        <div class="input-group shadow-sm">
                                            <span class="input-group-text bg-white border-0"><i class="fa-solid fa-users text-primary"></i></span>
                                            @Html.TextBoxFor(m => m.SoCho, new { @class = "form-control border-0", type = "number", min = "1" })
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        @Html.LabelFor(m => m.SoChoConLai, "Còn lại", new { @class = "form-label fw-semibold" })
                                        <div class="input-group shadow-sm">
                                            <span class="input-group-text bg-white border-0"><i class="fa-solid fa-user-check text-success"></i></span>
                                            @Html.TextBoxFor(m => m.SoChoConLai, new { @class = "form-control border-0", type = "number", min = "0" })
                                        </div>
                                    </div>
                                </div>

                                <div class="d-grid gap-3 mt-5">
                                    <button type="submit" class="btn btn-primary btn-lg fw-bold shadow-sm" style="padding: 1rem 2rem; font-size: 1.1rem;">
                                        <i class="fa-solid fa-check me-2"></i>Hoàn tất
                                    </button>
                                    <a href="@Url.Action("Tours", "Admin")" class="btn btn-outline-secondary" style="padding: 0.75rem 1.5rem;">
                                        <i class="fa-solid fa-times me-2"></i>Hủy
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
