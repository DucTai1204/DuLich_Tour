@model DuLich_Tour.Models.KhuyenMai

@{
    ViewBag.Title = "Sửa khuyến mãi";
}

@section PageActions{
    <a href="@Url.Action("KhuyenMais", "Admin")" class="btn btn-light text-secondary rounded-pill fw-semibold">
        <i class="fa-solid fa-arrow-left me-2"></i>Quay lại danh sách
    </a>
}

<div class="row justify-content-center">
    <div class="col-xl-9 col-lg-10">
        <div class="card border-0 shadow-sm overflow-hidden">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0 fw-bold text-danger" style="font-size: 1.5rem;">Cập nhật khuyến mãi</h4>
                        <p class="text-muted mb-0 mt-2" style="font-size: 1rem;">Chỉnh sửa chương trình #@Model.IdKhuyenMai</p>
                    </div>
                    <span class="badge bg-light text-dark border px-4 py-2" style="font-size: 1rem;">Mã: @Model.IdKhuyenMai</span>
                </div>
            </div>
            <div class="card-body" style="padding: 2.5rem 3rem;">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.IdKhuyenMai)
                    @Html.ValidationSummary(false, "", new { @class = "alert alert-danger rounded-3 mb-4" })

                    <div class="row g-4">
                        <div class="col-md-12">
                            <div class="mb-5">
                                @Html.LabelFor(m => m.TenChuongTrinh, "Tên chương trình", new { @class = "form-label fw-semibold" })
                                @Html.TextBoxFor(m => m.TenChuongTrinh, new { @class = "form-control form-control-lg bg-light border-0" })
                                @Html.ValidationMessageFor(m => m.TenChuongTrinh, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="mb-4">
                                @Html.LabelFor(m => m.MoTa, "Mô tả chi tiết", new { @class = "form-label fw-semibold" })
                                @Html.TextAreaFor(m => m.MoTa, 4, 50, new { @class = "form-control bg-light border-0" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-4">
                                @Html.LabelFor(m => m.GiaTri, "Giá trị giảm", new { @class = "form-label fw-semibold" })
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-white border-0 fw-bold text-danger"><i class="fa-solid fa-tag me-1"></i>₫</span>
                                    @Html.TextBoxFor(m => m.GiaTri, "{0:0.##}", new { @class = "form-control border-0", placeholder = "0" })
                                </div>
                                @Html.ValidationMessageFor(m => m.GiaTri, "", new { @class = "text-danger small mt-1" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-4">
                                @Html.LabelFor(m => m.KieuGiam, "Kiểu giảm", new { @class = "form-label fw-semibold" })
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-white border-0"><i class="fa-solid fa-percent text-danger"></i></span>
                                    @Html.DropDownListFor(m => m.KieuGiam, new SelectList(new[] {
                                        new { Value = "phan_tram", Text = "Phần trăm (%)" },
                                        new { Value = "so_tien", Text = "Số tiền cố định (VNĐ)" }
                                    }, "Value", "Text", Model != null ? Model.KieuGiam : null), new { @class = "form-select border-0" })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-4">
                                @Html.LabelFor(m => m.NgayBatDau, "Ngày bắt đầu", new { @class = "form-label fw-semibold" })
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-white border-0"><i class="fa-solid fa-calendar-check text-success"></i></span>
                                    @Html.TextBoxFor(m => m.NgayBatDau, "{0:yyyy-MM-dd}", new { @class = "form-control border-0", type = "date" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-4">
                                @Html.LabelFor(m => m.NgayKetThuc, "Ngày kết thúc", new { @class = "form-label fw-semibold" })
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-white border-0"><i class="fa-solid fa-calendar-xmark text-danger"></i></span>
                                    @Html.TextBoxFor(m => m.NgayKetThuc, "{0:yyyy-MM-dd}", new { @class = "form-control border-0", type = "date" })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-check form-switch p-4 bg-light rounded-3 shadow-sm">
                                @Html.CheckBoxFor(m => m.TrangThai, new { @class = "form-check-input", id = "TrangThai" })
                                <label class="form-check-label fw-semibold ms-3" for="TrangThai" style="font-size: 1rem;">
                                    <i class="fa-solid fa-toggle-on text-success me-2"></i>Kích hoạt chương trình
                                </label>
                            </div>
                        </div>

                        <div class="col-md-12 mt-5">
                            <div class="d-grid gap-3">
                                <button type="submit" class="btn btn-danger btn-lg fw-bold shadow-sm" style="padding: 1rem 2rem; font-size: 1.1rem;">
                                    <i class="fa-solid fa-floppy-disk me-2"></i>Lưu thay đổi
                                </button>
                                <a href="@Url.Action("KhuyenMais", "Admin")" class="btn btn-outline-secondary" style="padding: 0.75rem 1.5rem;">
                                    <i class="fa-solid fa-times me-2"></i>Hủy
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
