@model DuLich_Tour.Models.KhuyenMai

@{
    ViewBag.Title = "Sửa khuyến mãi";
}

<h2 class="mb-3">Sửa khuyến mãi</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.IdKhuyenMai)
    @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })

    <div class="mb-3">
        @Html.LabelFor(m => m.TenChuongTrinh, "Tên chương trình", new { @class = "form-label" })
        @Html.TextBoxFor(m => m.TenChuongTrinh, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.TenChuongTrinh, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.MoTa, "Mô tả", new { @class = "form-label" })
        @Html.TextAreaFor(m => m.MoTa, 3, 50, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.GiaTri, "Giá trị giảm", new { @class = "form-label" })
        @Html.TextBoxFor(m => m.GiaTri, new { @class = "form-control", type = "number", step = "0.01" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.KieuGiam, "Kiểu giảm", new { @class = "form-label" })
        @Html.TextBoxFor(m => m.KieuGiam, new { @class = "form-control" })
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            @Html.LabelFor(m => m.NgayBatDau, "Ngày bắt đầu", new { @class = "form-label" })
            @Html.TextBoxFor(m => m.NgayBatDau, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        </div>
        <div class="col-md-6 mb-3">
            @Html.LabelFor(m => m.NgayKetThuc, "Ngày kết thúc", new { @class = "form-label" })
            @Html.TextBoxFor(m => m.NgayKetThuc, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        </div>
    </div>

    <div class="form-check mb-3">
        @Html.CheckBoxFor(m => m.TrangThai, new { @class = "form-check-input", id = "TrangThai" })
        <label class="form-check-label" for="TrangThai">Kích hoạt</label>
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    @Html.ActionLink("Quay lại", "KhuyenMais", null, new { @class = "btn btn-secondary ms-2" })
}


