@model IEnumerable<DuLich_Tour.Models.KhachHang>

@{
    ViewBag.Title = "Khách hàng";
}

@section PageActions{
    @Html.ActionLink("Thêm khách hàng", "CreateKhachHang", null, new { @class = "btn btn-primary rounded-pill" })
}

<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center gap-4">
            <div>
                <p class="text-uppercase text-muted small mb-2" style="font-size: 0.75rem; letter-spacing: 0.1em; font-weight: 600;">CRM</p>
                <h2 class="fw-bold mb-2" style="font-size: 1.75rem; color: #1f2937;">Quản lý khách hàng</h2>
                <p class="text-muted mb-0" style="font-size: 1rem;">Theo dõi thông tin liên hệ và gán tài khoản cho khách đặt tour.</p>
            </div>
            <div class="input-group w-100 w-lg-50 shadow-sm" style="max-width: 400px;">
                <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-magnifying-glass"></i></span>
                <input type="search" class="form-control border-start-0" placeholder="Tìm theo tên hoặc email..." onkeyup="filterKhachHang(this.value)" style="padding: 0.75rem 1rem;" />
            </div>
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body" style="padding: 0;">
        <div class="table-responsive">
            <table class="table align-middle mb-0" id="khachhangTable">
        <thead class="table-light text-uppercase small text-muted">
            <tr>
                <th>Mã</th>
                <th>Họ tên</th>
                <th>Email</th>
                <th>Số điện thoại</th>
                <th>Tài khoản</th>
                <th class="text-end">Thao tác</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="fw-semibold">#@item.IdKhachHang</td>
                <td>@item.HoTen</td>
                <td>@item.Email</td>
                <td>@item.SoDienThoai</td>
                <td>@(item.TaiKhoan != null ? item.TaiKhoan.TenDangNhap : "-")</td>
                <td class="text-end">
                    <div class="d-flex gap-2 justify-content-end">
                        <a href="@Url.Action("EditKhachHang", new { id = item.IdKhachHang })" class="btn btn-outline-secondary" style="padding: 0.5rem 1rem;">
                            <i class="fa-solid fa-pen-to-square me-1"></i>Sửa
                        </a>
                        <a href="@Url.Action("DeleteKhachHang", new { id = item.IdKhachHang })" class="btn btn-outline-danger" style="padding: 0.5rem 1rem;">
                            <i class="fa-solid fa-trash me-1"></i>Xóa
                        </a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
        </div>
    </div>
</div>

@section scripts{
    <script>
        function filterKhachHang(keyword) {
            const filter = keyword.toLowerCase();
            document.querySelectorAll('#khachhangTable tbody tr').forEach(row => {
                row.style.display = row.innerText.toLowerCase().includes(filter) ? '' : 'none';
            });
        }
    </script>
}


