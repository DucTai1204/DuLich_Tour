@model DuLich_Tour.Models.DiaDiemDuLich

@{
    ViewBag.Title = "Sửa địa điểm";
}

@section PageActions{
    <a href="@Url.Action("DiaDiems", "Admin")" class="btn btn-light text-secondary rounded-pill fw-semibold">
        <i class="fa-solid fa-arrow-left me-2"></i>Quay lại danh sách
    </a>
}

<div class="row justify-content-center">
    <div class="col-xl-8 col-lg-10">
        <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
            <div class="card-header bg-white border-bottom py-4 px-5">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0 fw-bold text-success">Cập nhật địa điểm</h4>
                        <p class="text-muted small mb-0 mt-1">Chỉnh sửa thông tin điểm đến #@Model.IdDiaDiem</p>
                    </div>
                    <span class="badge bg-light text-dark border px-3 py-2">Mã: @Model.IdDiaDiem</span>
                </div>
            </div>
            <div class="card-body p-5">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.IdDiaDiem)
                    @Html.ValidationSummary(false, "", new { @class = "alert alert-danger rounded-3 mb-4" })

                    <div class="row g-4">
                        <div class="col-md-12">
                            <div class="mb-3">
                                @Html.LabelFor(m => m.TenDiaDiem, "Tên địa điểm", new { @class = "form-label fw-semibold" })
                                @Html.TextBoxFor(m => m.TenDiaDiem, new { @class = "form-control form-control-lg bg-light border-0" })
                                @Html.ValidationMessageFor(m => m.TenDiaDiem, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="mb-3">
                                @Html.LabelFor(m => m.ViTri, "Vị trí / Tỉnh thành", new { @class = "form-label fw-semibold" })
                                @Html.TextBoxFor(m => m.ViTri, new { @class = "form-control bg-light border-0" })
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="mb-3">
                                @Html.LabelFor(m => m.HinhAnh, "URL Hình ảnh", new { @class = "form-label fw-semibold" })
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0"><i class="fa-regular fa-image"></i></span>
                                    @Html.TextBoxFor(m => m.HinhAnh, new { @class = "form-control bg-light border-0" })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="mb-4">
                                @Html.LabelFor(m => m.MoTa, "Mô tả", new { @class = "form-label fw-semibold" })
                                @Html.TextAreaFor(m => m.MoTa, 4, 50, new { @class = "form-control bg-light border-0" })
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-check form-switch">
                                @Html.CheckBoxFor(m => m.TrangThai, new { @class = "form-check-input", id = "TrangThai" })
                                <label class="form-check-label fw-semibold" for="TrangThai">Đang sử dụng</label>
                            </div>
                        </div>

                        <div class="col-md-12 mt-4">
                            <div class="d-grid">
                                <button type="submit" class="btn btn-success btn-lg rounded-pill fw-bold shadow-sm">
                                    <i class="fa-solid fa-floppy-disk me-2"></i>Lưu thay đổi
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
