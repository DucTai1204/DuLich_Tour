@model DuLich_Tour.Models.DiaDiemDuLich

@{
    ViewBag.Title = "Sửa địa điểm";
}

<h2 class="mb-3">Sửa địa điểm du lịch</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.IdDiaDiem)
    @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })

    <div class="mb-3">
        @Html.LabelFor(m => m.TenDiaDiem, "Tên địa điểm", new { @class = "form-label" })
        @Html.TextBoxFor(m => m.TenDiaDiem, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.TenDiaDiem, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.ViTri, "Vị trí", new { @class = "form-label" })
        @Html.TextBoxFor(m => m.ViTri, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.MoTa, "Mô tả", new { @class = "form-label" })
        @Html.TextAreaFor(m => m.MoTa, 3, 50, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.HinhAnh, "Hình ảnh", new { @class = "form-label" })
        @Html.TextBoxFor(m => m.HinhAnh, new { @class = "form-control" })
    </div>

    <div class="form-check mb-3">
        @Html.CheckBoxFor(m => m.TrangThai, new { @class = "form-check-input", id = "TrangThai" })
        <label class="form-check-label" for="TrangThai">Đang sử dụng</label>
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    @Html.ActionLink("Quay lại", "DiaDiems", null, new { @class = "btn btn-secondary ms-2" })
}


