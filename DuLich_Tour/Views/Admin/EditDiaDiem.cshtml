@model DuLich_Tour.Models.DiaDiemDuLich

@{
    ViewBag.Title = "Sửa địa điểm";
}

@section PageActions{
    <a href="@Url.Action("DiaDiems", "Admin")" class="btn btn-light text-secondary rounded-pill fw-semibold">
        <i class="fa-solid fa-arrow-left me-2"></i>Quay lại danh sách
    </a>
}

<div class="row justify-content-center">
    <div class="col-xl-9 col-lg-10">
        <div class="card border-0 shadow-sm overflow-hidden">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0 fw-bold text-success" style="font-size: 1.5rem;">Cập nhật địa điểm</h4>
                        <p class="text-muted mb-0 mt-2" style="font-size: 1rem;">Chỉnh sửa thông tin điểm đến #@Model.IdDiaDiem</p>
                    </div>
                    <span class="badge bg-light text-dark border px-4 py-2" style="font-size: 1rem;">Mã: @Model.IdDiaDiem</span>
                </div>
            </div>
            <div class="card-body" style="padding: 2.5rem 3rem;">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.IdDiaDiem)
                    @Html.ValidationSummary(false, "", new { @class = "alert alert-danger rounded-3 mb-4" })

                    <div class="row g-4">
                        <div class="col-md-12">
                            <div class="mb-5">
                                @Html.LabelFor(m => m.TenDiaDiem, "Tên địa điểm", new { @class = "form-label fw-semibold" })
                                <div class="input-group input-group-lg shadow-sm">
                                    <span class="input-group-text bg-white border-0"><i class="fa-solid fa-mountain-city text-success"></i></span>
                                    @Html.TextBoxFor(m => m.TenDiaDiem, new { @class = "form-control border-0", placeholder = "Nhập tên địa điểm..." })
                                </div>
                                @Html.ValidationMessageFor(m => m.TenDiaDiem, "", new { @class = "text-danger small mt-1" })
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="mb-4">
                                @Html.LabelFor(m => m.ViTri, "Vị trí / Tỉnh thành", new { @class = "form-label fw-semibold" })
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-white border-0"><i class="fa-solid fa-location-dot text-primary"></i></span>
                                    @Html.TextBoxFor(m => m.ViTri, new { @class = "form-control border-0", placeholder = "Ví dụ: Đà Lạt, Lâm Đồng" })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="mb-4">
                                @Html.LabelFor(m => m.HinhAnh, "URL Hình ảnh", new { @class = "form-label fw-semibold" })
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-white border-0"><i class="fa-regular fa-image text-info"></i></span>
                                    @Html.TextBoxFor(m => m.HinhAnh, new { @class = "form-control border-0", placeholder = "https://example.com/image.jpg" })
                                </div>
                                <div class="form-text"><i class="fa-solid fa-link me-1"></i>Đường dẫn đầy đủ đến hình ảnh</div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="mb-4">
                                @Html.LabelFor(m => m.MoTa, "Mô tả", new { @class = "form-label fw-semibold" })
                                @Html.TextAreaFor(m => m.MoTa, 4, 50, new { @class = "form-control border-0 shadow-sm", placeholder = "Mô tả chi tiết về địa điểm..." })
                                <div class="form-text"><i class="fa-solid fa-info-circle me-1"></i>Mô tả về địa điểm du lịch</div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-check form-switch p-4 bg-light rounded-3 shadow-sm">
                                @Html.CheckBoxFor(m => m.TrangThai, new { @class = "form-check-input", id = "TrangThai" })
                                <label class="form-check-label fw-semibold ms-3" for="TrangThai" style="font-size: 1rem;">
                                    <i class="fa-solid fa-toggle-on text-success me-2"></i>Đang sử dụng
                                </label>
                            </div>
                        </div>

                        <div class="col-md-12 mt-5">
                            <div class="d-grid gap-3">
                                <button type="submit" class="btn btn-success btn-lg fw-bold shadow-sm" style="padding: 1rem 2rem; font-size: 1.1rem;">
                                    <i class="fa-solid fa-floppy-disk me-2"></i>Lưu thay đổi
                                </button>
                                <a href="@Url.Action("DiaDiems", "Admin")" class="btn btn-outline-secondary" style="padding: 0.75rem 1.5rem;">
                                    <i class="fa-solid fa-times me-2"></i>Hủy
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
