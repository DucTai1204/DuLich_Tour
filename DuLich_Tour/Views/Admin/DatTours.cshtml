@model IEnumerable<DuLich_Tour.Models.DatTour>

@{
    ViewBag.Title = "Đơn đặt tour";
}

@section PageActions{
    <a href="@Url.Action("Tours", "Admin")" class="btn btn-outline-secondary rounded-pill">
        <i class="fa-solid fa-map-location-dot me-2"></i>Quản lý tour
    </a>
}

<div class="card border-0 shadow-sm form-card mb-4">
    <div class="card-body d-flex flex-column flex-lg-row justify-content-between align-items-lg-center gap-3">
        <div>
            <p class="text-uppercase text-muted small mb-1">Vận hành</p>
            <h2 class="h4 fw-bold mb-0">Quản lý đơn đặt tour</h2>
            <p class="text-muted mb-0">Duyệt, hủy hoặc xem nhanh trạng thái của từng đơn hàng.</p>
        </div>
        <div class="input-group input-group-sm w-100 w-lg-50 shadow-sm">
            <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-magnifying-glass"></i></span>
            <input type="search" class="form-control border-start-0" placeholder="Tìm theo khách hàng / tour" onkeyup="filterBooking(this.value)" />
        </div>
    </div>
</div>

<div class="table-responsive shadow-sm rounded-4 border">
    <table class="table align-middle mb-0" id="bookingTable">
        <thead class="table-light text-uppercase small text-muted">
            <tr>
                <th>Mã</th>
                <th>Khách hàng</th>
                <th>Tour</th>
                <th>Ngày đặt</th>
                <th>Số khách</th>
                <th>Trạng thái</th>
                <th class="text-end">Thao tác</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            var guests = item.SoNguoiLon + item.SoTreEm;
            string statusClass = "bg-warning text-dark";
            string statusLabel = "Chờ xác nhận";

            if (item.TrangThai == "da-xac-nhan")
            {
                statusClass = "bg-success";
                statusLabel = "Đã xác nhận";
            }
            else if (item.TrangThai == "da-huy")
            {
                statusClass = "bg-danger";
                statusLabel = "Đã hủy";
            }
            
            var customerName = item.KhachHang != null ? item.KhachHang.HoTen : "-";
            var customerEmail = item.KhachHang != null ? item.KhachHang.Email : "-";
            var tourName = item.TourDuLich != null ? item.TourDuLich.TenTour : "-";
            <tr>
                <td class="fw-semibold">#@item.IdDatTour</td>
                <td>
                    <span class="fw-semibold d-block">@customerName</span>
                    <small class="text-muted">@customerEmail</small>
                </td>
                <td>
                    <span class="fw-semibold d-block">@tourName</span>
                    <small class="text-muted">Mã tour: @item.IdTour</small>
                </td>
                <td>@item.NgayDat.ToString("dd/MM/yyyy")</td>
                <td>@guests người</td>
                <td>
                    <span class="badge @statusClass px-3 py-2">@statusLabel</span>
                </td>
                <td class="text-end">
                    <a href="@Url.Action("DatTourDetails", new { id = item.IdDatTour })" class="btn btn-outline-secondary btn-sm rounded-pill me-2">
                        <i class="fa-solid fa-eye me-1"></i>Chi tiết
                    </a>
                    @if (item.TrangThai != "da-xac-nhan")
                    {
                        using (Html.BeginForm("ApproveBooking", "Admin", new { id = item.IdDatTour }, FormMethod.Post, new { @class = "d-inline" }))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success btn-sm rounded-pill me-2">
                                <i class="fa-solid fa-check me-1"></i>Duyệt
                            </button>
                        }
                    }
                    @if (item.TrangThai != "da-huy")
                    {
                        using (Html.BeginForm("RejectBooking", "Admin", new { id = item.IdDatTour }, FormMethod.Post, new { @class = "d-inline", onsubmit = "return confirm('Bạn chắc chắn muốn hủy đơn này?');" }))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill">
                                <i class="fa-solid fa-xmark me-1"></i>Hủy
                            </button>
                        }
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

@section scripts{
    <script>
        function filterBooking(keyword) {
            const filter = keyword.toLowerCase();
            document.querySelectorAll('#bookingTable tbody tr').forEach(row => {
                row.style.display = row.innerText.toLowerCase().includes(filter) ? '' : 'none';
            });
        }
    </script>
}

