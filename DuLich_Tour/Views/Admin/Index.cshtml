@model DuLich_Tour.Models.AdminDashboardViewModel
@using System.Globalization

@{
    ViewBag.Title = "Dashboard Quản trị";
    var culture = new CultureInfo("vi-VN");
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="fw-bold text-primary mb-2" style="font-size: 2rem;">Tổng quan hệ thống</h2>
            <p class="text-muted mb-0" style="font-size: 1.1rem;">Chào mừng trở lại, @Session["TenDangNhap"]!</p>
        </div>
        <div>
            <span class="badge bg-light text-dark border p-3" style="font-size: 1rem;">
                <i class="fa-regular fa-calendar me-2"></i> @DateTime.Now.ToString("dd/MM/yyyy")
            </span>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-5">
        <!-- Revenue Card -->
        <div class="col-md-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div class="flex-grow-1">
                            <p class="text-muted text-uppercase small fw-semibold mb-2" style="font-size: 0.8rem; letter-spacing: 0.05em;">Doanh thu tổng</p>
                            <h3 class="fw-bold text-success mb-0" style="font-size: 1.75rem;">@Model.TotalRevenue.ToString("C0", culture)</h3>
                        </div>
                        <div class="icon-box bg-success bg-opacity-10 text-success" style="flex-shrink: 0;">
                            <i class="fa-solid fa-sack-dollar fa-xl"></i>
                        </div>
                    </div>
                    <div class="mt-3 pt-3 border-top">
                        <small class="text-muted"><i class="fa-solid fa-arrow-trend-up text-success me-2"></i>Cập nhật liên tục</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bookings Card -->
        <div class="col-md-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div class="flex-grow-1">
                            <p class="text-muted text-uppercase small fw-semibold mb-2" style="font-size: 0.8rem; letter-spacing: 0.05em;">Đơn đặt tour</p>
                            <h3 class="fw-bold text-primary mb-0" style="font-size: 1.75rem;">@Model.TotalBookings</h3>
                        </div>
                        <div class="icon-box bg-primary bg-opacity-10 text-primary" style="flex-shrink: 0;">
                            <i class="fa-solid fa-cart-shopping fa-xl"></i>
                        </div>
                    </div>
                    <div class="mt-3 pt-3 border-top">
                        <a href="@Url.Action("DatTours", "Admin")" class="text-decoration-none small fw-semibold">Xem chi tiết <i class="fa-solid fa-chevron-right ms-1"></i></a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tours Card -->
        <div class="col-md-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div class="flex-grow-1">
                            <p class="text-muted text-uppercase small fw-semibold mb-2" style="font-size: 0.8rem; letter-spacing: 0.05em;">Tour đang mở</p>
                            <h3 class="fw-bold text-info mb-0" style="font-size: 1.75rem;">@Model.TotalTours</h3>
                        </div>
                        <div class="icon-box bg-info bg-opacity-10 text-info" style="flex-shrink: 0;">
                            <i class="fa-solid fa-map-location-dot fa-xl"></i>
                        </div>
                    </div>
                    <div class="mt-3 pt-3 border-top">
                        <a href="@Url.Action("Tours", "Admin")" class="text-decoration-none small fw-semibold">Quản lý tour <i class="fa-solid fa-chevron-right ms-1"></i></a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Customers Card -->
        <div class="col-md-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div class="flex-grow-1">
                            <p class="text-muted text-uppercase small fw-semibold mb-2" style="font-size: 0.8rem; letter-spacing: 0.05em;">Khách hàng</p>
                            <h3 class="fw-bold text-warning mb-0" style="font-size: 1.75rem;">@Model.TotalCustomers</h3>
                        </div>
                        <div class="icon-box bg-warning bg-opacity-10 text-warning" style="flex-shrink: 0;">
                            <i class="fa-solid fa-users fa-xl"></i>
                        </div>
                    </div>
                    <div class="mt-3 pt-3 border-top">
                        <a href="@Url.Action("KhachHangs", "Admin")" class="text-decoration-none small fw-semibold">Xem danh sách <i class="fa-solid fa-chevron-right ms-1"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <!-- Chart Section -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header">
                    <h5 class="card-title fw-bold mb-0" style="font-size: 1.25rem;">Biểu đồ doanh thu (6 tháng)</h5>
                </div>
                <div class="card-body">
                    <canvas id="revenueChart" style="max-height: 400px;"></canvas>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header">
                    <h5 class="card-title fw-bold mb-0" style="font-size: 1.25rem;">Truy cập nhanh</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-3">
                        <a href="@Url.Action("CreateTour", "Admin")" class="btn btn-outline-primary text-start p-4 d-flex align-items-center" style="font-size: 1rem;">
                            <i class="fa-solid fa-plus-circle fa-lg me-3"></i>
                            <span class="fw-semibold">Tạo Tour Mới</span>
                        </a>
                        <a href="@Url.Action("KhuyenMais", "Admin")" class="btn btn-outline-danger text-start p-4 d-flex align-items-center" style="font-size: 1rem;">
                            <i class="fa-solid fa-tags fa-lg me-3"></i>
                            <span class="fw-semibold">Quản lý Khuyến Mãi</span>
                        </a>
                        <a href="@Url.Action("DiaDiems", "Admin")" class="btn btn-outline-success text-start p-4 d-flex align-items-center" style="font-size: 1rem;">
                            <i class="fa-solid fa-mountain-sun fa-lg me-3"></i>
                            <span class="fw-semibold">Danh mục Địa Điểm</span>
                        </a>
                        <a href="@Url.Action("TaiKhoans", "Admin")" class="btn btn-outline-secondary text-start p-4 d-flex align-items-center" style="font-size: 1rem;">
                            <i class="fa-solid fa-user-shield fa-lg me-3"></i>
                            <span class="fw-semibold">Quản trị Tài Khoản</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Bookings Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title fw-bold mb-0" style="font-size: 1.25rem;">Đơn đặt tour gần đây</h5>
            <a href="@Url.Action("DatTours", "Admin")" class="btn btn-sm btn-light text-primary fw-semibold">Xem tất cả</a>
        </div>
        <div class="card-body" style="padding: 0;">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Mã đơn</th>
                            <th>Khách hàng</th>
                            <th>Tour</th>
                            <th>Ngày đặt</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                            <th class="text-end pe-4">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.RecentBookings != null && Model.RecentBookings.Any())
                        {
                            foreach (var item in Model.RecentBookings)
                            {
                                <tr>
                                    <td class="ps-4 fw-semibold">#@item.IdDatTour</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm bg-primary bg-opacity-10 text-primary rounded-circle me-2 d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                                <i class="fa-solid fa-user"></i>
                                            </div>
                                            <span>@(item.KhachHang != null ? item.KhachHang.HoTen : "Khách vãng lai")</span>
                                        </div>
                                    </td>
                                    <td>@(item.TourDuLich != null ? item.TourDuLich.TenTour : "Tour đã xóa")</td>
                                    <td>@item.NgayDat.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td class="fw-bold text-success">@item.TongTien.ToString("C0", culture)</td>
                                    <td>
                                        @if (item.TrangThai == "cho-xac-nhan")
                                        {
                                            <span class="badge bg-warning text-dark">Chờ xác nhận</span>
                                        }
                                        else if (item.TrangThai == "da-xac-nhan")
                                        {
                                            <span class="badge bg-success">Đã xác nhận</span>
                                        }
                                        else if (item.TrangThai == "da-huy")
                                        {
                                            <span class="badge bg-danger">Đã hủy</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@item.TrangThai</span>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <a href="@Url.Action("DatTourDetails", "Admin", new { id = item.IdDatTour })" class="btn btn-sm btn-light text-primary">
                                            <i class="fa-solid fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-4 text-muted">Chưa có đơn đặt tour nào.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var ctx = document.getElementById('revenueChart').getContext('2d');
            
            // Data from ViewModel
            var labels = @Html.Raw(Json.Encode(Model.RevenueLabels));
            var data = @Html.Raw(Json.Encode(Model.MonthlyRevenue));

            var gradient = ctx.createLinearGradient(0, 0, 0, 400);
            gradient.addColorStop(0, 'rgba(13, 110, 253, 0.2)');
            gradient.addColorStop(1, 'rgba(13, 110, 253, 0)');

            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Doanh thu (VNĐ)',
                        data: data,
                        borderColor: '#0d6efd',
                        backgroundColor: gradient,
                        borderWidth: 2,
                        pointBackgroundColor: '#ffffff',
                        pointBorderColor: '#0d6efd',
                        pointRadius: 4,
                        pointHoverRadius: 6,
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed.y !== null) {
                                        label += new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(context.parsed.y);
                                    }
                                    return label;
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                borderDash: [2, 4],
                                color: '#f0f0f0'
                            },
                            ticks: {
                                callback: function(value, index, values) {
                                    if (value >= 1000000) return (value/1000000) + 'M';
                                    if (value >= 1000) return (value/1000) + 'k';
                                    return value;
                                }
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });
        });
    </script>
}
