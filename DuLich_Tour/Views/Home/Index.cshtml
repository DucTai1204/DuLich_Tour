@model List<DuLich_Tour.Models.TourDuLich>
@{
    ViewBag.Title = "Trang Chủ - Khám Phá Tour Du Lịch Tuyệt Vời";
}

<main class="py-4">
    <!-- Phần 1: Hero Section - Banner chính -->
    <header class="p-5 text-center bg-primary text-white rounded-4 shadow-lg mb-5">
        <h1 class="display-4 fw-bold mb-3">Tìm kiếm chuyến phiêu lưu tiếp theo của bạn</h1>
        <p class="lead mb-4">Chúng tôi cung cấp những tour du lịch độc đáo và trải nghiệm đáng nhớ nhất.</p>
        <p>
            <a href="@Url.Action("Index", "Tour")" class="btn btn-warning btn-lg px-5 rounded-pill shadow">Khám phá tất cả Tours &raquo;</a>
        </p>
    </header>

    <!-- Phần 2: Danh sách Tour Nổi Bật -->
    <div class="row mb-5">
        <div class="col-12 text-center mb-4">
            <h2 class="fw-bold text-dark">🔥 Các Tour Du Lịch Nổi Bật</h2>
            <p class="text-muted">Đừng bỏ lỡ những hành trình được yêu thích nhất của chúng tôi.</p>
        </div>

        @if (Model != null && Model.Count > 0)
        {
            foreach (var tour in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 border-0 shadow-sm rounded-3 overflow-hidden tour-card">
                        <!-- Hình ảnh tour -->
                        <img src="@tour.HinhAnh" class="card-img-top" alt="@tour.TenTour" style="height: 200px; object-fit: cover;">

                        <div class="card-body d-flex flex-column">
                            <!-- Tiêu đề và Địa điểm -->
                            <h5 class="card-title fw-semibold text-primary">@tour.TenTour</h5>
                            <p class="card-subtitle mb-2 text-muted small">
                                <i class="fas fa-map-marker-alt me-1"></i>
                                @(tour.DiaDiemDuLich?.TenDiaDiem ?? "Chưa xác định")
                            </p>

                            <!-- Mô tả và Chi tiết -->
                            <p class="card-text small text-truncate-3">@tour.MoTaNgan</p>

                            <div class="mt-auto pt-3 border-top">
                                <!-- Giá -->
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="text-success fw-bold fs-5">
                                        @string.Format("{0:N0}₫", tour.GiaNguoiLon)
                                    </span>
                                    <span class="badge bg-info text-dark">
                                        Còn: @tour.SoChoConLai/@tour.SoCho chỗ
                                    </span>
                                </div>

                                <!-- Nút chi tiết -->
                                <a href="@Url.Action("Details", "Tour", new { id = tour.IdTour })" class="btn btn-outline-primary w-100 rounded-pill">Xem chi tiết &raquo;</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <p class="lead text-muted">Không tìm thấy tour du lịch nào đang mở bán.</p>
                <a href="@Url.Action("Index", "Tour")" class="btn btn-secondary rounded-pill">Thử tìm kiếm Tours khác</a>
            </div>
        }
    </div>

    <!-- Phần 3: Call to Action (CTA) -->
    <div class="row">
        <div class="col-12">
            <div class="p-4 text-center bg-light border rounded-3">
                <h3 class="fw-bold mb-3">Bạn cần tư vấn?</h3>
                <p class="mb-4">Liên hệ với đội ngũ chuyên gia du lịch của chúng tôi để được hỗ trợ tốt nhất!</p>
                <a href="@Url.Action("Contact", "Home")" class="btn btn-success rounded-pill px-4 shadow-sm"><i class="fas fa-headset me-2"></i> Liên hệ ngay</a>
            </div>
        </div>
    </div>
</main>