@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

        <style>
            body {
                font-family: 'Montserrat', sans-serif;
            }

            .login-split-wrapper {
                min-height: 100vh;
                display: flex;
                align-items: stretch;
                overflow: hidden;
            }

            /* === BÊN TRÁI === */
            .login-left {
                flex: 1.2;
                background: linear-gradient(135deg, rgba(38, 70, 83, 0.85), rgba(231, 111, 81, 0.6)), url('https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=1920&q=80') center/cover no-repeat;
                display: flex;
                align-items: center;
                justify-content: center;
                color: white;
                text-align: center;
                padding: 3rem;
                position: relative;
            }

            .left-content {
                animation: fadeUp 1s ease-out;
                z-index: 2;
            }

                .left-content h1 {
                    font-size: 4rem;
                    font-weight: 800;
                    text-shadow: 0 10px 30px rgba(0,0,0,0.5);
                    margin-bottom: 1rem;
                    letter-spacing: -1px;
                }

                .left-content p {
                    font-size: 1.3rem;
                    font-weight: 400;
                    opacity: 0.9;
                    max-width: 500px;
                    margin: 0 auto;
                }

            .logo-big {
                width: 120px;
                height: 120px;
                border-radius: 50%;
                border: 4px solid rgba(255,255,255,0.2);
                margin-bottom: 2rem;
                backdrop-filter: blur(10px);
                box-shadow: 0 15px 35px rgba(0,0,0,0.3);
            }

            /* === BÊN PHẢI === */
            .login-right {
                flex: 1;
                background: #ffffff;
                display: flex;
                align-items: center;
                justify-content: center;
                padding: 40px;
                position: relative;
            }

            .login-form-card {
                width: 100%;
                max-width: 450px;
                animation: fadeUp 1.2s ease-out;
            }

            .login-header h2 {
                color: #264653;
                font-weight: 800;
                font-size: 2.5rem;
            }

            /* === INPUT CUSTOM === */
            .input-group-custom {
                position: relative;
                margin-bottom: 1.5rem;
            }

                .input-group-custom i {
                    position: absolute;
                    left: 25px;
                    top: 50%;
                    transform: translateY(-50%);
                    color: #999;
                    font-size: 1.2rem;
                    transition: color 0.3s;
                    z-index: 2;
                }

            .input-full {
                width: 100% !important;
                height: 60px;
                border-radius: 30px !important;
                padding-left: 60px !important;
                padding-right: 25px !important;
                font-size: 1rem !important;
                border: 2px solid #f0f0f0 !important;
                background: #f9f9f9;
                transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
            }

                .input-full:focus {
                    background: #fff;
                    border-color: #2a9d8f !important;
                    box-shadow: 0 10px 25px rgba(42, 157, 143, 0.15) !important;
                    outline: none;
                }

                    .input-full:focus + i,
                    .input-full:not(:placeholder-shown) + i {
                        color: #2a9d8f;
                    }

            /* === BUTTON === */
            .btn-login-full {
                width: 100%;
                height: 60px;
                border-radius: 30px;
                background: linear-gradient(to right, #e76f51, #f4a261);
                border: none;
                color: white;
                font-weight: 700;
                font-size: 1.1rem;
                text-transform: uppercase;
                letter-spacing: 1px;
                box-shadow: 0 10px 20px rgba(231, 111, 81, 0.3);
                transition: all 0.4s ease;
                cursor: pointer;
            }

                .btn-login-full:hover {
                    transform: translateY(-3px);
                    box-shadow: 0 15px 30px rgba(231, 111, 81, 0.5);
                    background: linear-gradient(to right, #f4a261, #e76f51);
                }

            .link-hover a {
                color: #666;
                font-weight: 600;
                transition: 0.3s;
            }

                .link-hover a:hover {
                    color: #2a9d8f;
                }

            /* === ANIMATION KEYFRAMES (SỬ DỤNG @@) === */
            @@keyframes fadeUp {
                from {
                    opacity: 0;
                    transform: translateY(30px);
                }

                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }

            /* === RESPONSIVE (SỬ DỤNG @@) === */
            @@media (max-width: 992px) {
                .login-split-wrapper {
                    flex-direction: column;
                }

                .login-left {
                    min-height: 35vh;
                    flex: unset;
                    padding: 2rem;
                }

                .left-content h1 {
                    font-size: 2.5rem;
                }

                .logo-big {
                    width: 80px;
                    height: 80px;
                    margin-bottom: 1rem;
                }

                .login-right {
                    flex: 1;
                    border-top-left-radius: 30px;
                    border-top-right-radius: 30px;
                    margin-top: -30px;
                    z-index: 10;
                }
            }
        </style>
    }
}

<div class="login-split-wrapper">

    <div class="login-left">
        <div class="left-content">
            <img src="~/Content/images/logo.png" alt="KSP Logo" class="logo-big" onerror="this.style.display='none'">
            <h1>Hello World.</h1>
            <p>Khám phá những hành trình tuyệt vời cùng chúng tôi ngay hôm nay.</p>
        </div>
    </div>

    <div class="login-right">
        <div class="login-form-card">

            <div class="login-header mb-5 text-center">
                <h2>Welcome Back!</h2>
                <p class="text-muted">Vui lòng nhập thông tin đăng nhập</p>
            </div>

            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "needs-validation", novalidate = true }))
            {
                @Html.AntiForgeryToken()

                if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger border-0 shadow-sm rounded-pill text-center mb-4">
                        <small>@Html.ValidationSummary(true, "")</small>
                    </div>
                }

                <div class="input-group-custom">
                    <input type="text" name="tenDangNhap" class="form-control input-full"
                           placeholder="Tên đăng nhập" required autofocus />
                    <i class="fas fa-user"></i>
                </div>

                <div class="input-group-custom">
                    <input type="password" name="matKhau" class="form-control input-full"
                           placeholder="Mật khẩu" required />
                    <i class="fas fa-lock"></i>
                </div>

                <div class="d-flex justify-content-end mb-4">
                    @Html.ActionLink("Quên mật khẩu?", "ForgotPassword", "Account", null, new { @class = "text-decoration-none text-muted small" })
                </div>

                <div class="mb-4">
                    <button type="submit" class="btn-login-full">
                        Đăng nhập <i class="fas fa-arrow-right ms-2"></i>
                    </button>
                </div>
            }

            <div class="link-hover text-center mt-4">
                <p class="text-muted">
                    Chưa có tài khoản?
                    @Html.ActionLink("Đăng ký ngay", "Register", "Account", null, new { @class = "text-decoration-none ms-1" })
                </p>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Script đơn giản để focus
        document.querySelector('input[autofocus]')?.focus();
    </script>
}