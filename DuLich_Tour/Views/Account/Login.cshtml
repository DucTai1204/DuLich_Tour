@{
    ViewBag.Title = "Đăng nhập";
    Layout = null; // Không dùng layout để có full control
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Du Lịch Khám Phá</title>
    
    <!-- Bootstrap 5 + FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            overflow-x: hidden;
        }

        /* Background với thác nước */
        .login-background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('https://images.unsplash.com/photo-1506905925346-21bda4d32df4?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            z-index: -1;
        }

        .login-background::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(0, 0, 0, 0.3) 0%, rgba(0, 0, 0, 0.1) 100%);
        }

        /* Container chính */
        .login-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            position: relative;
            z-index: 1;
        }

        /* Form login với glassmorphism */
        .login-form-wrapper {
            width: 100%;
            max-width: 450px;
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.3);
            box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
            padding: 3rem;
            animation: slideInLeft 0.8s ease-out;
        }

        .login-form-wrapper h2 {
            color: #000;
            font-weight: 700;
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        .login-form-wrapper .form-label {
            color: #333;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .login-form-wrapper .form-control {
            background: rgba(255, 255, 255, 0.8);
            border: 1px solid rgba(255, 255, 255, 0.5);
            border-radius: 10px;
            padding: 0.75rem 1rem;
            color: #333;
            transition: all 0.3s ease;
        }

        .login-form-wrapper .form-control:focus {
            background: rgba(255, 255, 255, 0.95);
            border-color: rgba(102, 126, 234, 0.5);
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
            outline: none;
        }

        .login-form-wrapper .form-control::placeholder {
            color: #999;
        }

        .input-icon {
            position: relative;
        }

        .input-icon i {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #667eea;
            z-index: 2;
        }

        .input-icon .form-control {
            padding-left: 3rem;
        }

        .remember-me {
            color: #333;
            font-weight: 500;
        }

        .remember-me input[type="checkbox"] {
            margin-right: 0.5rem;
        }

        .btn-login {
            width: 100%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 10px;
            padding: 0.75rem;
            color: white;
            font-weight: 700;
            font-size: 1.1rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6);
            background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
            color: white;
        }

        .forgot-password {
            color: #333;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .forgot-password:hover {
            color: #667eea;
        }

        .register-link {
            color: #333;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s ease;
        }

        .register-link:hover {
            color: #667eea;
        }

        /* Quote và Social Icons bên phải */
        .quote-section {
            position: fixed;
            right: 5%;
            top: 50%;
            transform: translateY(-50%);
            color: white;
            text-align: center;
            max-width: 400px;
            animation: slideInRight 0.8s ease-out;
            z-index: 1;
        }

        .quote-section h1 {
            font-size: 3rem;
            font-weight: 800;
            text-transform: uppercase;
            line-height: 1.2;
            margin-bottom: 2rem;
            text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5);
        }

        .quote-divider {
            width: 100px;
            height: 2px;
            background: white;
            margin: 2rem auto;
        }

        .social-icons {
            display: flex;
            justify-content: center;
            gap: 1rem;
            margin-top: 2rem;
        }

        .social-icon {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.2rem;
            transition: all 0.3s ease;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .social-icon:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        }

        @*/* Animations */
        @keyframes slideInLeft {
            from {
                opacity: 0;
                transform: translateX(-50px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }*@

        @*@keyframes slideInRight {
            from {
                opacity: 0;
                transform: translateX(50px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        /* Responsive */
        @media (max-width: 992px) {
            .quote-section {
                display: none;
            }

            .login-form-wrapper {
                max-width: 100%;
                padding: 2rem;
            }
        }

        @media (max-width: 576px) {
            .login-form-wrapper {
                padding: 1.5rem;
            }

            .login-form-wrapper h2 {
                font-size: 1.5rem;
            }
        }*@

        /* Alert styling */
        .alert {
            background: rgba(255, 255, 255, 0.9);
            border: none;
            border-radius: 10px;
            backdrop-filter: blur(10px);
        }
    </style>
</head>
<body>
    <!-- Background -->
    <div class="login-background"></div>

    <!-- Container chính -->
    <div class="login-container">
        <!-- Form Login -->
        <div class="login-form-wrapper">
            <h2>Đăng nhập tài khoản</h2>
            <p class="text-muted mb-4">Vui lòng nhập thông tin đăng nhập của bạn</p>

            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger mb-3">
                        <small>@Html.ValidationSummary(true, "")</small>
                    </div>
                }

                <div class="mb-3">
                    <label for="tenDangNhap" class="form-label">Tên đăng nhập</label>
                    <div class="input-icon">
                        <i class="fas fa-user"></i>
                        <input type="text" class="form-control" id="tenDangNhap" name="tenDangNhap" 
                               placeholder="Nhập tên đăng nhập" required autofocus>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="matKhau" class="form-label">Mật khẩu</label>
                    <div class="input-icon">
                        <i class="fas fa-lock"></i>
                        <input type="password" class="form-control" id="matKhau" name="matKhau" 
                               placeholder="Nhập mật khẩu" required>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <label class="remember-me">
                        <input type="checkbox" name="rememberMe" id="rememberMe">
                        Ghi nhớ đăng nhập
                    </label>
                    <a href="#" class="forgot-password">Quên mật khẩu?</a>
                </div>

                <button type="submit" class="btn btn-login mb-3">
                    <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập
                </button>
            }

            <div class="text-center mt-4">
                <p class="text-muted mb-0">Chưa có tài khoản?</p>
                <a href="@Url.Action("Register", "Account")" class="register-link">
                    Đăng ký ngay <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>

        <!-- Quote và Social Icons -->
        <!-- <div class="quote-section">
            <h1>
                MỤC TIÊU CỦA CUỘC SỐNG<br>
                LÀ SỐNG HÒA HỢP<br>
                VỚI THIÊN NHIÊN
            </h1>
            <div class="quote-divider"></div>
            <div class="social-icons">
                <a href="#" class="social-icon">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a href="#" class="social-icon">
                    <i class="fab fa-instagram"></i>
                </a>
                <a href="#" class="social-icon">
                    <i class="fab fa-linkedin-in"></i>
                </a>
                <a href="#" class="social-icon">
                    <i class="fab fa-twitter"></i>
                </a>
            </div>
        </div> -->
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
