@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Đảm bảo sử dụng layout chính của bạn
}

<div class="d-flex align-items-center justify-content-center" style="min-height: 80vh; background-color: #f8f9fa;">
    <div class="col-lg-4 col-md-6 col-sm-8">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-white text-primary border-0 pt-4 pb-0 text-center">
                <h2 class="fw-bold mb-0">Chào mừng trở lại</h2>
                <p class="text-muted mt-1">Đăng nhập để tiếp tục</p>
            </div>
            <div class="card-body p-5">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="mb-4">
                        <label for="tenDangNhap" class="form-label text-dark fw-semibold">Tên đăng nhập / Email</label>
                        <input type="text" name="tenDangNhap" class="form-control form-control-lg rounded-pill" placeholder="Tên đăng nhập hoặc Email" required />
                    </div>
                    <div class="mb-4">
                        <label for="matKhau" class="form-label text-dark fw-semibold">Mật khẩu</label>
                        <input type="password" name="matKhau" class="form-control form-control-lg rounded-pill" placeholder="Mật khẩu" required />
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg w-100 rounded-pill shadow-sm mt-3">Đăng nhập</button>
                }
                <div class="text-center mt-4">
                    <p class="mb-0 text-muted">Chưa có tài khoản? @Html.ActionLink("Đăng ký ngay", "Register", "Account", null, new { @class = "text-decoration-none fw-semibold" })</p>
                </div>
            </div>
        </div>

        @if (ViewData.ModelState.Count > 0 && ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
        {
            <div class="alert alert-danger mt-3 text-center rounded-3 shadow-sm" role="alert">
                @Html.ValidationSummary(true, "Lỗi đăng nhập:")
            </div>
        }
    </div>
</div>