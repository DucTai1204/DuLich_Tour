@model DuLich_Tour.Models.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Đổi Mật Khẩu";
}

@section Styles {
    <style>
        .password-container {
            background: #f8f9fa;
            min-height: 100vh;
            padding: 3rem 0;
        }

        .password-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
            overflow: hidden;
            border: none;
            max-width: 600px;
            margin: 0 auto;
        }

        .password-header {
            background: #007bff;
            color: white;
            padding: 2rem;
            text-align: center;
        }

        .password-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: white;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            font-size: 2.5rem;
            color: #007bff;
            border: 5px solid rgba(255, 255, 255, 0.3);
        }

        .password-body {
            padding: 2.5rem;
        }

        .form-group-custom {
            margin-bottom: 1.5rem;
        }

        .form-label-custom {
            font-weight: 600;
            color: #333;
            margin-bottom: 0.75rem;
            display: block;
            font-size: 0.95rem;
        }

        .form-control-custom {
            border: 2px solid #e0e0e0;
            border-radius: 12px;
            padding: 0.75rem 1rem;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-control-custom:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.15);
            outline: none;
        }

        .input-group-icon {
            position: relative;
        }

        .input-group-icon i {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #007bff;
            z-index: 10;
        }

        .input-group-icon input {
            padding-left: 3rem;
        }

        .btn-custom {
            padding: 0.75rem 2rem;
            border-radius: 12px;
            font-weight: 600;
            transition: all 0.3s ease;
            border: none;
        }

        .btn-primary-custom {
            background: #007bff;
            color: white;
        }

        .btn-primary-custom:hover {
            background: #0056b3;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 123, 255, 0.3);
        }

        .btn-outline-custom {
            border: 2px solid #007bff;
            color: #007bff;
            background: white;
        }

        .btn-outline-custom:hover {
            background: #007bff;
            color: white;
            transform: translateY(-2px);
        }

        .section-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #333;
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .section-title i {
            color: #007bff;
            font-size: 1.3rem;
        }

        .password-strength {
            margin-top: 0.5rem;
            font-size: 0.85rem;
        }

        .password-requirement {
            color: #666;
            font-size: 0.9rem;
            margin-top: 0.5rem;
        }
    </style>
}

<div class="password-container">
    <div class="container">
        <h2 class="section-title">
            <i class="fas fa-key"></i>
            Đổi Mật Khẩu
        </h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show rounded-3 shadow-sm">
                <i class="fas fa-check-circle me-2"></i>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show rounded-3 shadow-sm">
                <i class="fas fa-exclamation-circle me-2"></i>
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="row justify-content-center">
            <div class="col-12">
                <div class="password-card">
                    <div class="password-header">
                        <div class="password-icon">
                            <i class="fas fa-lock"></i>
                        </div>
                        <h4 class="mb-0">Bảo mật tài khoản</h4>
                        <p class="mb-0 opacity-75">Thay đổi mật khẩu của bạn</p>
                    </div>

                    <div class="password-body">
                        @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            if (!ViewData.ModelState.IsValid)
                            {
                                <text>
                                <div class="alert alert-danger rounded-3">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger mb-0" })
                                </div>
                                </text>
                            }

                            <div class="form-group-custom">
                                <label class="form-label-custom">
                                    <i class="fas fa-lock me-2 text-primary"></i>Mật khẩu hiện tại <span class="text-danger">*</span>
                                </label>
                                <div class="input-group-icon">
                                    <i class="fas fa-lock"></i>
                                    @Html.PasswordFor(m => m.MatKhauCu, new { @class = "form-control form-control-custom", @placeholder = "Nhập mật khẩu hiện tại" })
                                </div>
                                @Html.ValidationMessageFor(m => m.MatKhauCu, "", new { @class = "text-danger small" })
                            </div>

                            <div class="form-group-custom">
                                <label class="form-label-custom">
                                    <i class="fas fa-key me-2 text-primary"></i>Mật khẩu mới <span class="text-danger">*</span>
                                </label>
                                <div class="input-group-icon">
                                    <i class="fas fa-key"></i>
                                    @Html.PasswordFor(m => m.MatKhauMoi, new { @class = "form-control form-control-custom", @placeholder = "Nhập mật khẩu mới" })
                                </div>
                                @Html.ValidationMessageFor(m => m.MatKhauMoi, "", new { @class = "text-danger small" })
                                <div class="password-requirement">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Mật khẩu phải có ít nhất 6 ký tự
                                </div>
                            </div>

                            <div class="form-group-custom">
                                <label class="form-label-custom">
                                    <i class="fas fa-check-double me-2 text-primary"></i>Xác nhận mật khẩu mới <span class="text-danger">*</span>
                                </label>
                                <div class="input-group-icon">
                                    <i class="fas fa-check-double"></i>
                                    @Html.PasswordFor(m => m.XacNhanMatKhauMoi, new { @class = "form-control form-control-custom", @placeholder = "Nhập lại mật khẩu mới" })
                                </div>
                                @Html.ValidationMessageFor(m => m.XacNhanMatKhauMoi, "", new { @class = "text-danger small" })
                            </div>

                            <hr class="my-4">

                            <div class="d-flex gap-3 justify-content-end">
                                <a href="@Url.Action("Profile", "Account")" class="btn btn-outline-custom btn-custom">
                                    <i class="fas fa-arrow-left me-2"></i>Quay lại
                                </a>
                                <button type="submit" class="btn btn-primary-custom btn-custom">
                                    <i class="fas fa-save me-2"></i>Đổi mật khẩu
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
