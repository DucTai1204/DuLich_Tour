@model DuLich_Tour.Models.TourDuLich
@{
    ViewBag.Title = Model.TenTour;
}

<div class="container py-5">
    <div class="row">
        <!-- Hình ảnh tour -->
        <div class="col-lg-8 mb-4">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <img src="@(string.IsNullOrEmpty(Model.HinhAnh) ? "https://via.placeholder.com/800x500?text=Tour+Image" : Model.HinhAnh)" 
                     class="card-img-top" 
                     alt="@Model.TenTour" 
                     style="height: 500px; object-fit: cover;">
            </div>
        </div>

        <!-- Thông tin đặt tour -->
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-lg rounded-4 sticky-top" style="top: 100px;">
                <div class="card-body p-4">
                    <h3 class="fw-bold text-primary mb-4">@Model.TenTour</h3>

                    <!-- Địa điểm -->
                    <div class="mb-3">
                        <i class="fas fa-map-marker-alt text-danger me-2"></i>
                        <strong>Địa điểm:</strong>
                        <span class="text-muted">@(Model.DiaDiemDuLich?.TenDiaDiem ?? "Chưa xác định")</span>
                    </div>

                    <!-- Thời gian -->
                    @if (Model.NgayBatDau.HasValue && Model.NgayKetThuc.HasValue)
                    {
                        var days = (Model.NgayKetThuc.Value - Model.NgayBatDau.Value).Days;
                        <div class="mb-3">
                            <i class="fas fa-calendar-alt text-primary me-2"></i>
                            <strong>Thời gian:</strong>
                            <span class="text-muted">
                                @Model.NgayBatDau.Value.ToString("dd/MM/yyyy") - @Model.NgayKetThuc.Value.ToString("dd/MM/yyyy")
                                (@days ngày @(days - 1) đêm)
                            </span>
                        </div>
                    }

                    <!-- Số chỗ -->
                    <div class="mb-3">
                        <i class="fas fa-users text-info me-2"></i>
                        <strong>Số chỗ:</strong>
                        <span class="text-muted">Còn @Model.SoChoConLai/@Model.SoCho chỗ</span>
                    </div>

                    <!-- Khuyến mãi -->
                    @if (Model.KhuyenMai != null)
                    {
                        <div class="alert alert-success rounded-3 mb-4">
                            <i class="fas fa-gift me-2"></i>
                            <strong>@Model.KhuyenMai.TenChuongTrinh</strong>
                            <br>
                            <small>
                                @if (Model.KhuyenMai.KieuGiam == "phan_tram")
                                {
                                    <text>Giảm @Model.KhuyenMai.GiaTri%</text>
                                }
                                else
                                {
                                    <text>Giảm @string.Format("{0:N0}₫", Model.KhuyenMai.GiaTri)</text>
                                }
                            </small>
                        </div>
                    }

                    <!-- Giá -->
                    <div class="mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-muted">Người lớn:</span>
                            <span class="text-success fw-bold fs-4">
                                @string.Format("{0:N0}₫", Model.GiaNguoiLon)
                            </span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted">Trẻ em:</span>
                            <span class="text-success fw-bold">
                                @string.Format("{0:N0}₫", Model.GiaTreEm)
                            </span>
                        </div>
                    </div>

                    <!-- Nút đặt tour -->
                    @if (Model.SoChoConLai > 0)
                    {
                        <button class="btn btn-primary w-100 rounded-pill py-3 fw-bold fs-5 mb-3">
                            <i class="fas fa-shopping-cart me-2"></i>Đặt tour ngay
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-secondary w-100 rounded-pill py-3 fw-bold fs-5 mb-3" disabled>
                            <i class="fas fa-times-circle me-2"></i>Hết chỗ
                        </button>
                    }

                    <a href="@Url.Action("Index", "Tour")" class="btn btn-outline-secondary w-100 rounded-pill">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Chi tiết tour -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-body p-5">
                    <h4 class="fw-bold mb-4">
                        <i class="fas fa-info-circle text-primary me-2"></i>Thông tin tour
                    </h4>

                    <!-- Mô tả ngắn -->
                    @if (!string.IsNullOrEmpty(Model.MoTaNgan))
                    {
                        <div class="mb-4">
                            <h5 class="fw-semibold mb-3">Mô tả</h5>
                            <p class="text-muted" style="line-height: 1.8;">
                                @Model.MoTaNgan
                            </p>
                        </div>
                    }

                    <!-- Lịch trình -->
                    @if (!string.IsNullOrEmpty(Model.LichTrinh))
                    {
                        <div class="mb-4">
                            <h5 class="fw-semibold mb-3">
                                <i class="fas fa-route text-success me-2"></i>Lịch trình
                            </h5>
                            <div class="text-muted" style="line-height: 1.8; white-space: pre-line;">
                                @Model.LichTrinh
                            </div>
                        </div>
                    }

                    <!-- Thông tin địa điểm -->
                    @if (Model.DiaDiemDuLich != null && !string.IsNullOrEmpty(Model.DiaDiemDuLich.MoTa))
                    {
                        <div class="mb-4">
                            <h5 class="fw-semibold mb-3">
                                <i class="fas fa-map-marked-alt text-danger me-2"></i>Về @Model.DiaDiemDuLich.TenDiaDiem
                            </h5>
                            <p class="text-muted" style="line-height: 1.8;">
                                @Model.DiaDiemDuLich.MoTa
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

