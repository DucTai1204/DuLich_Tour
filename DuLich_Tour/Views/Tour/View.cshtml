@model DuLich_Tour.Models.TourDuLich

@{
    ViewBag.Title = "Chi Tiết Tour - " + Model.TenTour;
}

<div class="container py-4">
    <h2 class="fw-bold text-primary">@Model.TenTour</h2>

    <p class="text-muted mb-2">
        <i class="fas fa-map-marker-alt me-1"></i>
        @(Model.DiaDiemDuLich?.TenDiaDiem ?? "Chưa xác định")
    </p>

    <p>@Model.MoTaNgan</p>

    <div class="mb-3">
        <strong>Ngày bắt đầu:</strong> @Model.NgayBatDau.ToString("dd/MM/yyyy") <br />
        <strong>Ngày kết thúc:</strong> @Model.NgayKetThuc.ToString("dd/MM/yyyy") <br />
        <strong>Giá người lớn:</strong> @string.Format("{0:N0}₫", Model.GiaNguoiLon) <br />
        <strong>Giá trẻ em:</strong> @string.Format("{0:N0}₫", Model.GiaTreEm) <br />
        <strong>Chỗ còn lại:</strong> @Model.SoChoConLai/@Model.SoCho
    </div>

    @if (Model.KhuyenMai != null && Model.KhuyenMai.TrangThai)
    {
        <div class="alert alert-danger">
            Khuyến mãi:
            @if (Model.KhuyenMai.KieuGiam == "phan_tram")
            {
                @($"{Model.KhuyenMai.GiaTri}% giảm")
            }
            else
            {
                @($"{Model.KhuyenMai.GiaTri:N0}₫ giảm")
            }
        </div>
    }

    <a href="@Url.Action("Index", "Tour")" class="btn btn-secondary rounded-pill">Quay lại danh sách tour</a>
</div>
