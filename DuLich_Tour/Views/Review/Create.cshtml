@model DuLich_Tour.Models.DanhGiaTour
@{
    ViewBag.Title = "Đánh Giá Tour";
    var tour = ViewBag.Tour as DuLich_Tour.Models.TourDuLich;
}

@section Styles {
    <style>
        .review-container {
            background: #f8f9fa;
            min-height: 100vh;
            padding: 3rem 0;
        }

        .review-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
            overflow: hidden;
            border: none;
        }

        .review-header {
            background: #007bff;
            color: white;
            padding: 2rem;
            text-align: center;
        }

        .review-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: white;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            font-size: 2.5rem;
            color: #007bff;
            border: 5px solid rgba(255, 255, 255, 0.3);
        }

        .review-body {
            padding: 2.5rem;
        }

        .star-rating {
            display: flex;
            gap: 0.5rem;
            justify-content: center;
            margin: 1.5rem 0;
            flex-direction: row-reverse;
        }

        .star-rating input[type="radio"] {
            display: none;
        }

        .star-rating label {
            font-size: 2rem;
            color: #ddd;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .star-rating label:hover,
        .star-rating label:hover ~ label,
        .star-rating input[type="radio"]:checked ~ label {
            color: #ffc107;
        }

        .form-group-custom {
            margin-bottom: 1.5rem;
        }

        .form-label-custom {
            font-weight: 600;
            color: #333;
            margin-bottom: 0.75rem;
            display: block;
            font-size: 0.95rem;
        }

        .form-control-custom {
            border: 2px solid #e0e0e0;
            border-radius: 12px;
            padding: 0.75rem 1rem;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-control-custom:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.15);
            outline: none;
        }

        .btn-custom {
            padding: 0.75rem 2rem;
            border-radius: 12px;
            font-weight: 600;
            transition: all 0.3s ease;
            border: none;
        }

        .btn-primary-custom {
            background: #007bff;
            color: white;
        }

        .btn-primary-custom:hover {
            background: #0056b3;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 123, 255, 0.3);
        }

        .btn-outline-custom {
            border: 2px solid #007bff;
            color: #007bff;
            background: white;
        }

        .btn-outline-custom:hover {
            background: #007bff;
            color: white;
            transform: translateY(-2px);
        }

        .tour-info-box {
            background: #f8f9fa;
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 2rem;
        }
    </style>
}

<div class="review-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="review-card">
                    <div class="review-header">
                        <div class="review-icon">
                            <i class="fas fa-star"></i>
                        </div>
                        <h4 class="mb-0">Đánh Giá Tour</h4>
                        <p class="mb-0 opacity-75">Chia sẻ trải nghiệm của bạn</p>
                    </div>

                    <div class="review-body">
                        @if (tour != null)
                        {
                            <div class="tour-info-box">
                                <h5 class="mb-2">@tour.TenTour</h5>
                                @if (tour.DiaDiemDuLich != null)
                                {
                                    <p class="text-muted mb-0">
                                        <i class="fas fa-map-marker-alt me-2"></i>@tour.DiaDiemDuLich.TenDiaDiem
                                    </p>
                                }
                            </div>
                        }

                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show rounded-3">
                                <i class="fas fa-exclamation-circle me-2"></i>
                                @TempData["ErrorMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        @using (Html.BeginForm("Create", "Review", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(m => m.IdTour)

                            if (!ViewData.ModelState.IsValid)
                            {
                                <text>
                                <div class="alert alert-danger rounded-3">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger mb-0" })
                                </div>
                                </text>
                            }

                            <div class="form-group-custom text-center">
                                <label class="form-label-custom">Đánh giá của bạn <span class="text-danger">*</span></label>
                                <div class="star-rating">
                                    <input type="radio" id="star5" name="DiemDanhGia" value="5" @(Model.DiemDanhGia == 5 ? "checked" : "") required>
                                    <label for="star5"><i class="fas fa-star"></i></label>
                                    <input type="radio" id="star4" name="DiemDanhGia" value="4" @(Model.DiemDanhGia == 4 ? "checked" : "")>
                                    <label for="star4"><i class="fas fa-star"></i></label>
                                    <input type="radio" id="star3" name="DiemDanhGia" value="3" @(Model.DiemDanhGia == 3 ? "checked" : "")>
                                    <label for="star3"><i class="fas fa-star"></i></label>
                                    <input type="radio" id="star2" name="DiemDanhGia" value="2" @(Model.DiemDanhGia == 2 ? "checked" : "")>
                                    <label for="star2"><i class="fas fa-star"></i></label>
                                    <input type="radio" id="star1" name="DiemDanhGia" value="1" @(Model.DiemDanhGia == 1 ? "checked" : "")>
                                    <label for="star1"><i class="fas fa-star"></i></label>
                                </div>
                                @Html.ValidationMessageFor(m => m.DiemDanhGia, "", new { @class = "text-danger small" })
                            </div>

                            <div class="form-group-custom">
                                <label class="form-label-custom">
                                    <i class="fas fa-comment me-2 text-primary"></i>Nội dung đánh giá
                                </label>
                                @Html.TextAreaFor(m => m.NoiDung, new { @class = "form-control form-control-custom", @rows = "6", @placeholder = "Chia sẻ trải nghiệm của bạn về tour này..." })
                                @Html.ValidationMessageFor(m => m.NoiDung, "", new { @class = "text-danger small" })
                            </div>

                            <hr class="my-4">

                            <div class="d-flex gap-3 justify-content-end">
                                <a href="@Url.Action("Details", "Tour", new { id = Model.IdTour })" class="btn btn-outline-custom btn-custom">
                                    <i class="fas fa-arrow-left me-2"></i>Quay lại
                                </a>
                                <button type="submit" class="btn btn-primary-custom btn-custom">
                                    <i class="fas fa-paper-plane me-2"></i>Gửi đánh giá
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function() {
            // Star rating interaction
            $('.star-rating label').on('click', function() {
                var value = $(this).prev('input').val();
                $('#DiemDanhGia').val(value);
            });
        });
    </script>
}

